                        <!-- Basic -->
                        <div class="col-md-6">
                            <div class="card mb-4">

                                @using (Html.BeginForm("Form", "Ticket", FormMethod.Post))
                                {
                                    <h5 class="card-header">Ticket</h5>
                                    <div class="card-body demo-vertical-spacing demo-only-element">
                                        <label class="form-label" asp-for="Titulo">Título:</label>
                                        <input asp-for="Titulo" placeholder="Digite o título do ticket" aria-label="Titulo" aria-describedby="basic-addon11" class="form-control" />
                                        <span asp-validation-for="Titulo" class="text-danger"></span>

                                       @* <label class="form-label" asp-for="DataMinima">Data Mínima</label>
