                                        <span asp-validation-for="DataLimite" class="text-danger"></span>


                                        <label class="form-label" asp-for="TicketPrioridadeSelecionado" for="basic-default-password12">Prioridade</label>
                                        <div class="input-group">
                                            <div class="input-group">
                                                @Html.DropDownListFor(model => model.TicketPrioridadeSelecionado, new SelectList(Model.TicketPrioridades, "Valor", "Descricao"), "Selecione um item",  new { @class = "form-select" })
                                            </div>
                                        </div>

                                        <label class="form-label" asp-for="Descricao">Descrição:</label>
                                        <input asp-for="Descricao" placeholder=" Escreva uma descrição interna sobre este campo" aria-label="Descricao" aria-describedby="basic-addon11" class="form-control" />
                                        <span asp-validation-for="Descricao" class="text-danger"></span>

                                        <label class="form-label" asp-for="DepartamentoSelectionado" for="basic-default-password12">Departamento</label>
                                        <div class="input-group">
                                            <div class="input-group">
                                                @Html.DropDownListFor(model => model.DepartamentoSelectionado, new SelectList(Model.Departamentos, "Id", "Nome"), "Selecione um item",  new { @class = "form-select" })
                                            </div>
                                        </div>

                                        <label class="form-label" asp-for="Solicitante">Solicitante:</label>
                                        <input asp-for="Solicitante" placeholder="Digite o nome do solicitante" aria-label="Solicitante" aria-describedby="basic-addon11" class="form-control" />
                                        <span asp-validation-for="Solicitante" class="text-danger"></span>

                                        @*  <label class="form-label" asp-for="Comentario">Comentario:</label>
                                    <input asp-for="Comentario" placeholder="Comentario" aria-label="Comentario" aria-describedby="basic-addon11" class="form-control" />
                                    <span asp-validation-for="Comentario" class="text-danger"></span>
